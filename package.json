{
  "name": "petpad",
  "version": "1.0.0",
  "description": "PetPad - AI Pet Token Launchpad on Base with Auto Pixel Art",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "db:setup": "bun run src/db/index.ts",
    "build": "echo 'No build step required for Bun'",
    "postinstall": "bunx better-sqlite3@latest --force-rebuild || true"
  },
  "dependencies": {
    "hono": "^4.6.5",
    "better-sqlite3": "^11.5.0",
    "viem": "^2.21.1",
    "nanoid": "^5.0.9"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/bun": "latest",
    "typescript": "^5.6.3"
  },
  "engines": {
    "bun": ">=1.1.0",
    "node": "20.x"
  },
  "bun": {
    "install": {
      "exact": true
    }
  }
}
