{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["node"],
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs_20", "python311", "gcc", "make"],
          "aptPkgs": ["build-essential", "libsqlite3-dev"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "bun run start"
  }
}
